{
    "name": "starter-template_nextjs-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --fix",
        "lint:check": "next lint",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest",
        "test:ci": "vitest run",
        "e2e": "playwright test --ui",
        "e2e:ci": "playwright test",
        "postinstall": "husky install",
        "preCommit": "npm run lint:check && npm run format:check",
        "clean": "rm -rf .next .swc node_modules coverage package-lock.json"
    },
    "dependencies": {
        "next": "15.4.5",
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.54.2",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.0.1",
        "eslint": "^9",
        "eslint-config-next": "15.4.5",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "prettier": "3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5",
        "vitest": "^3.2.4"
    }
