{
    "name": "starter-template_nextjs-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --fix",
        "lint:check": "eslint .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest",
        "test:ci": "vitest run",
        "e2e": "playwright test --ui",
        "e2e:ci": "playwright test",
        "postinstall": "husky install",
        "preCommit": "npm run lint:check && npm run format:check",
        "clean": "rm -rf .next .swc node_modules coverage package-lock.json"
    },
    "dependencies": {
        "next": "16.1.1",
        "react": "19.2.3",
        "react-dom": "19.2.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/node": "^25",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "jsdom": "^27.4.0",
        "prettier": "3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5",
        "vitest": "^4.0.16"
    }
